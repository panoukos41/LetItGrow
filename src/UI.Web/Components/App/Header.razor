<header class="header@(css.End())">
    <h6>LET IT GROW</h6>
</header>

@code{
    [Parameter]
    public string Class { get; set; } = string.Empty;

    private CssBuilder css;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        css = new CssBuilder(Class);
    }
}