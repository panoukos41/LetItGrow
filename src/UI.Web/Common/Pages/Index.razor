@page "/"
@using LetItGrow.UI.Node.Components
@using LetItGrow.UI.Group.Components
@inherits ReactiveComponentBase<HomeViewModel>
@inject NavigationManager nav

<Title Value="LetItGrow - Home"></Title>

<div class="flex flex-wrap justify-end border rounded">
    <button class="m-2 px-4" @onclick="() => nodeDialog.Show()">
        <i class="bi bi-plus"></i>
        Add Node
    </button>
    <button class="m-2 px-4" @onclick="() => groupDialog.Show()">
        <i class="bi bi-plus"></i>
        Add Group
    </button>
</div>

<Virtualize Items="VM.GroupedNodes" Context="pair">
    <details open>
        @{ 
            var (id, name) = pair.Group;
            var link = $"/group/{id}";
        }
        <summary class="p-0 flex justify-between no-underline hover:no-underline focus:no-underline">
            <h3 class="p-1 m-0 ml-2">@name</h3>
            @*<a href="/group/@id"><i class="bi bi-link"></i></a>*@
            <button class="m-0 btn py-0 text-gray-100 rounded-none" @onclick="() => nav.NavigateTo(link)">
                <i class="bi bi-box-arrow-up-right"></i>
            </button>
        </summary>

        <div class="flex flex-wrap">
            <Virtualize Items="pair.Nodes" Context="node">
                <NodeCard @key="node.Id" Node="node" Class="@cardCss" />
            </Virtualize>
        </div>
    </details>
</Virtualize>

<details open>
    <summary class="p-0 flex no-underline hover:no-underline focus:no-underline">
        <h3 class="p-1 m-0 ml-2">Not Grouped</h3>
    </summary>

    <div class="flex flex-wrap">
        <Virtualize Items="VM.UngroupedNodes" Context="node">
            <NodeCard @key="node.Id" Node="node" Class="@cardCss" />
        </Virtualize>
    </div>
</details>

<Dialog @ref="nodeDialog" Class="w-11/12 lg:w-1/3">
    <CreateNodeForm OnCancelClick="nodeDialog.Hide" />
</Dialog>
<Dialog @ref="groupDialog" Class="w-11/12 lg:w-1/3">
    <CreateGroupForm OnCancelClick="groupDialog.Hide" />
</Dialog>

@code{
    private string cardCss = "m-1";

    private Dialog nodeDialog = null!;
    private Dialog groupDialog = null!;

    [Inject]
    public HomeViewModel VM { get => ViewModel!; set => ViewModel = value; }
}